# Application
NODE_ENV=production
PORT=3000
API_VERSION=v1
DEBUG=false
LOG_LEVEL=info

# Database
DATABASE_URL="postgresql://user:password@host:5432/algo360fx_prod?schema=public"
DATABASE_SSL=true

# Redis
REDIS_URL="redis://host:6379/0"
REDIS_PASSWORD="strong_redis_password"

# JWT Authentication
JWT_SECRET="use_very_long_random_string"
JWT_REFRESH_SECRET="use_different_very_long_random_string"
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# WebSocket
WS_PORT=8081
WS_PATH="/ws"
WS_HEARTBEAT_INTERVAL=30000

# Trading
TRADING_ENABLED=true
DEFAULT_LEVERAGE=100
MAX_LEVERAGE=500
MIN_VOLUME=0.01
MAX_VOLUME=100
MAX_SLIPPAGE=3
DEFAULT_STOP_LOSS=50
DEFAULT_TAKE_PROFIT=100
RISK_PERCENTAGE=1
MAX_TRADES_PER_SYMBOL=5
MAX_DAILY_TRADES=20
TRADING_HOURS="00:00-23:59"
TRADING_DAYS="1,2,3,4,5"

# Market Data
MARKET_DATA_PROVIDER="MT5"
MARKET_API_KEY="your_market_api_key"
MARKET_API_URL="https://api.market.com"
MARKET_UPDATE_INTERVAL=1000
SUPPORTED_SYMBOLS="EURUSD,GBPUSD,USDJPY,AUDUSD,USDCAD,USDCHF,NZDUSD"
DEFAULT_TIMEFRAMES="M1,M5,M15,M30,H1,H4,D1"

# AI/ML
OPENAI_API_KEY="your_openai_api_key"
AI_MODEL="gpt-4"
AI_MAX_TOKENS=2000
AI_TEMPERATURE=0.7
SENTIMENT_ANALYSIS_ENABLED=true
RISK_ASSESSMENT_ENABLED=true

# News Integration
NEWS_API_KEY="your_news_api_key"
NEWS_UPDATE_INTERVAL=300000
NEWS_SOURCES="reuters,bloomberg,forexlive"

# Security
CORS_ORIGIN="https://algo360fx.com"
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=1000
BCRYPT_ROUNDS=12
SESSION_SECRET="use_very_long_random_string"
ALLOWED_HOSTS="algo360fx.com,api.algo360fx.com"

# Monitoring
SENTRY_DSN="your_sentry_dsn"
METRICS_ENABLED=true
TRACE_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# Cache
CACHE_TTL=3600
CACHE_MAX_SIZE=10000
CACHE_CHECK_PERIOD=600

# Notifications
SMTP_HOST="smtp.provider.com"
SMTP_PORT=587
SMTP_USER="your_smtp_user"
SMTP_PASS="your_smtp_password"
EMAIL_FROM="noreply@algo360fx.com"
PUSH_NOTIFICATIONS_ENABLED=true

# Feature Flags
FEATURE_SOCIAL_TRADING=true
FEATURE_COPY_TRADING=true
FEATURE_PAPER_TRADING=true
FEATURE_BACKTESTING=true
FEATURE_PORTFOLIO_ANALYSIS=true
FEATURE_RISK_MANAGEMENT=true
FEATURE_AUTOMATED_TRADING=true

# Development Tools
SWAGGER_ENABLED=false
PLAYGROUND_ENABLED=false
SEED_DATABASE=false
